<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.rtl.min.css" integrity="sha384-OXTEbYDqaX2ZY/BOaZV/yFGChYHtrXH2nyXJ372n2Y8abBhrqacCEe+3qhSHtLjy" crossorigin="anonymous">
    <script src="https://unpkg.com/boxicons@2.1.2/dist/boxicons.js"></script>
    <title>EDITAR PACHA</title>
    <style>
      body{
        background-color: rgb(177, 195, 214);
      }
    </style>
  </head>
  <body>
    <center style="padding-top: 10px;"><h1>EDITAR PACHA</h1> </center>
    

   <% if (user){ %>
      <div class="container mt-4">
        <div class="card border-secondary" style="background-color: rgba(154, 149, 182, 0.578);">
            <div class="card-header">Editar Registro</div>
            <div class="card-body">
                <form action="/update3" method="POST">
                    <input id="id" name="id" value="<%= user.id %>" hidden>

                    <div class="mb-3">
                      <label for="user" class="form-label">CÃ“DIGO</label>
                      <input type="text" class="form-control" id="codigo" name="codigo" value="<%=user.codigo %>" tabindex="1">
                  </div>

                    <div class="mb-3">
                        <label for="user" class="form-label">FECHA INGRESO</label>
                        <input type="text" class="form-control" id="fechaIn" name="fechaIn" value="<%=user.fechaIn %>" tabindex="1">
                    </div>

                    <div class="mb-3">
                        <label for="user" class="form-label">FECHA VENCIMIENTO</label>
                        <input type="text" class="form-control" id="fvencimiento" name="fvencimiento" value="<%=user.fvencimiento %>" tabindex="1"> <!-- el nombre del label es user y el ID y el NAME del type formarn el vinculo por ejemplo  user.name-->
                      </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">RESPONSABLE</label>
                        <input type="text" class="form-control" id="responsable" name="responsable" value="<%=user.responsable %>" tabindex="1"> <!-- el nombre del label es user y el ID y el NAME del type formarn el vinculo por ejemplo  user.name-->
                      </div>
                      <div class="mb-3">
                        <label for="user" class="form-label">OBSERVACIONES</label>
                        <input type="text" class="form-control" id="observaciones" name="observaciones" value="<%=user.observaciones %>" tabindex="1"> <!-- el nombre del label es user y el ID y el NAME del type formarn el vinculo por ejemplo  user.name-->
                      </div>
                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/menu_ingreso_pachas" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
      </div>
      <% } %>
  </body>
</html>