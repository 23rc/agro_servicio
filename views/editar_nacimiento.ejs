<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.rtl.min.css" integrity="sha384-OXTEbYDqaX2ZY/BOaZV/yFGChYHtrXH2nyXJ372n2Y8abBhrqacCEe+3qhSHtLjy" crossorigin="anonymous">
    <script src="https://unpkg.com/boxicons@2.1.2/dist/boxicons.js"></script>
    <title>EDITAR PARTO</title>
    <style>
      body{
        background-color: rgb(177, 195, 214);
      }
    </style>
  </head>
  <body>
    <center style="padding-top: 10px;"><h1>EDITAR PARTO</h1> </center>
    

   <% if (user){ %>
      <div class="container mt-4">
        <div class="card border-secondary" style="background-color: rgba(154, 149, 182, 0.578);">
            <div class="card-header">Editar Registro</div>
            <div class="card-body">
                <form action="/update5" method="POST">
                    <input id="id" name="id" value="<%= user.id %>" hidden>
                  
                    <div class="mb-3">
                      <!--    -->
                      <!-- <label for="user" class="form-label">ARETE DE LA CERDA</label>   -->
                      
                      <input type="text" class="form-control" id="aretecerda" name="aretecerda" value="<%=user.aretecerda %>" hidden>
                  </div>
                  <div class="mb-3">
                    <!--  <label for="user" class="form-label">NOMBRE DE LA CERDA</label>   -->
                   
                    <input type="text" class="form-control" id="cerda" name="cerda" value="<%=user.cerda %>" hidden>
                </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">CODIGO DE NACIMIENTO</label>
                        <input type="text" class="form-control" id="lotelechon" name="lotelechon" value="<%=user.lotelechon %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">PRECIO</label>
                        <input type="number" class="form-control" id="precio" name="precio" value="<%=user.precio %>" tabindex="1">
                      </div>
                      <div class="mb-3">
                        <!--   <label for="user" class="form-label">CANTIDAD</label>   -->
                      
                        <input type="number" class="form-control" id="cantidad" name="cantidad" value="<%=user.cantidad %>" hidden>
                      </div>
                      <div class="mb-3">
                        <label for="user" class="form-label">NUMERO DE PARTO</label>
                        <input type="number" class="form-control" id="nparto" name="nparto" value="<%=user.nparto %>" tabindex="1">
                      </div>
                      <div class="mb-3">
                        <label for="user" class="form-label">NACIDOS VIVOS</label>
                        <input type="number" class="form-control" id="nacvivos" name="nacvivos" value="<%=user.nacvivos %>" tabindex="1" step="0.001" oninput="calcular()">
                      </div>
                      <div class="mb-3">
                        <label for="user" class="form-label">NACIDOS MUERTOS</label>
                        <input type="number" class="form-control" id="nacmuertos" name="nacmuertos" value="<%=user.nacmuertos %>" tabindex="1" step="0.001" oninput="calcular()">
                      </div>
                      <div class="mb-3">
                        <label for="user" class="form-label">MOMIAS</label>
                        <input type="number" class="form-control" id="momias" name="momias" value="<%=user.momias %>" tabindex="1" step="0.001" oninput="calcular()">
                      </div>
                      <div class="mb-3">
                        <!--  <label for="user" class="form-label">TOTAL DE NACIDOS</label>  -->
                        
                        <input type="number" class="form-control" id="nactotal" name="nactotal" value="<%=user.nactotal %>" hidden>
                      </div>
                      <div class="mb-3">
                           <!--  </label>  -->
                        <label for="user" class="form-label">FECHA DE PARTO</label>
                        <input type="text" class="form-control" id="fechaparto" name="fechaparto" value="<%=user.fechaparto %>" tabindex="1">
                      </div>
                      <div class="mb-3">
                        <label for="user" class="form-label">ATENDIDO POR</label>
                        <input type="text" class="form-control" id="atendido" name="atendido" value="<%=user.atendido %>" tabindex="1">
                      </div>


                      <SCript type="text/javascript">
                        function calcular(){
                          try{
                            var a= parseFloat(document.getElementById("nacvivos").value)||0,
                                b= parseFloat(document.getElementById("nacmuertos").value)||0;
                                c= parseFloat(document.getElementById("momias").value)||0;
                            
                                document.getElementById("nactotal").value=a+b+c;
                                document.getElementById("cantidad").value=a;

                          }catch(e){}
                        }
                      </SCript>
                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/menu_ingreso_nacimientos" class="btn btn-secondary">Cancelar</a>
            
                </form>
            </div>
        </div>
      </div>
      <% } %>
     
      
  </body>
</html>