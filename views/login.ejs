    <title>LOGIN AGRO_SERVICE</title>

<link href="css/bootstrap.min.css" rel="stylesheet">
<style>
  body{/*fondo de pantalla del login*/
    background-image: url("img/coche.jpg");
            background-size: cover;
            background-repeat: no-repeat;
  }
</style>

    <!-- Custom styles for this template -->
    <link href="css/signin.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
  </head>
  <body class="text-center">
    
<main class="form-signin  m-auto shadow-lg p3 mb-10" style="background-color:rgba(177, 136, 136, 0.663);"><!-- Empieza el panel del login-->
  <form id="formLogin" action="/login" method="POST">
    <img class="mb-4" src="img/LOGO.png " alt="" width="150" height="150">
    <h1 class="h3 mb-3 fw-normal">Ingrese sus datos</h1>
    <div class="form-floating">
      <input type="text" class="form-control" id="user" name="user" placeholder="user">
      <label for="user">Correo electrónico</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="pass" name="pass" placeholder="pass">
      <label for="pass">Contraseña</label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Entrar</button>
  </form>
  <br>
  <a href="/"type="button" class="w-100 btn btn-lg btn-bd-primary">Cancelar</a>
</main>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(alert) { %>
      <script>
        Swal.fire({
          title:'<%= alertTitle %>',
          text:'<%= alertMessage %>',
          icon:'<%= alertIcon %>',
          showConfirmButton: <%= showConfirmButton %>,
          timer: <%= timer %>
        }).then(()=>{
          window.location = '/<%= ruta %>'
        })
      </script>

    <% } %>
  </body>
</html>
